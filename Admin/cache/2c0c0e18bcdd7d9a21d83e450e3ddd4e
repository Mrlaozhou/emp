    <script type="text/javascript">
        function delItem(a)
        {
          if ( window.confirm('确定要删除吗 ?') )
          {
              var id = $(a).attr('delId');
              $.ajax({
                url:"/admin.php/Beautycategray/del.emp",
                type:'POST',
                data:{'id':id},
                dataType:'JSON',
                success:function(msg)
                {
                    if ( msg.status )
                    {
                        alert('删除成功！');
                        $(a).parent().parent().remove();
                    }
                    else
                    {
                        alert('删除失败！');
                    }
                }
              })
          }
        }
    </script>
